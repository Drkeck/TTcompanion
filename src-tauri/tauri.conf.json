{
  "productName": "TTcompanion",
  "version": "0.0.1",
  "identifier": "com.ttcompanion.example",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "migrated",
          "description": "permissions that were migrated from v1",
          "local": true,
          "windows": [
            "main"
          ],
          "permissions": [
            "core:default",
            "fs:allow-read-file",
            "fs:allow-write-file",
            "fs:allow-read-dir",
            "fs:allow-mkdir",
            "fs:allow-remove",
            {
              "identifier": "fs:scope",
              "allow": [
                {
                  "path": "$DOCUMENT/ttcomp/*"
                },
                {
                  "path": "$DOCUMENT/*"
                }
              ]
            },
            "shell:allow-open",
            "fs:default",
            "shell:default"
          ]
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 720,
        "resizable": true,
        "title": "Tauri App",
        "width": 1280
      }
    ],
    "withGlobalTauri": true
  },
  "bundle": {},
  "plugins": {
    "cli": {
      "description": "Tauri CLI Plugin Example",
      "args": [
        {
          "short": "v",
          "name": "verbose",
          "description": "Verbosity level"
        }
      ],
      "subcommands": {
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            },
            {
              "name": "release",
              "description": "Run application in release mode"
            }
          ]
        }
      }
    }
  }
}